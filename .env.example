# ============================================
# Odowell - Environment Configuration Template
# ============================================
# IMPORTANTE: Copie este arquivo para .env e preencha com valores reais
# NUNCA commite o arquivo .env no repositório!
# Comando: cp .env.example .env

# ============================================
# URLs Configuration
# ============================================
FRONTEND_URL=app.odowell.pro
BACKEND_URL=api.odowell.pro

# ============================================
# Docker Configuration
# ============================================
DOCKER_USERNAME=your_dockerhub_username
# Gere um token em: https://hub.docker.com/settings/security
DOCKER_TOKEN=your_docker_access_token

# ============================================
# Replicas (ajuste conforme carga esperada)
# ============================================
# Para até 50 clínicas: 2 replicas
# Para até 200 clínicas: 4 replicas
# Para 200+ clínicas: 6-8 replicas
FRONTEND_REPLICAS=1
BACKEND_REPLICAS=4

# ============================================
# Database Configuration
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=drcrwell_db
DB_USER=odowell_app
# Use uma senha forte (mínimo 16 caracteres, letras, números e símbolos)
# Gere com: openssl rand -base64 32
DB_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# Connection Pool (ajuste para escala horizontal)
# PostgreSQL max_connections=500, reserve 100 para admin
# Fórmula: DB_MAX_OPEN_CONNS = 400 / BACKEND_REPLICAS
# 4 replicas: 400/4 = 100 (usamos 80 com margem)
DB_MAX_OPEN_CONNS=80
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT Secret
# ============================================
# Gere um secret seguro com: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING

# ============================================
# CORS Origins
# ============================================
CORS_ORIGINS=https://app.odowell.pro

# ============================================
# AWS S3 Configuration (para upload de exames)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=sa-east-1
S3_BASE_FOLDER=exams

# ============================================
# SMTP Configuration (para emails)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@odowell.pro

# ============================================
# App Branding (White Label)
# ============================================
# Nome do aplicativo que aparece nos emails e interface
APP_NAME=OdoWell

# ============================================
# Timezone
# ============================================
# Fuso horário para todos os serviços (PostgreSQL e Backend)
# Lista de timezones: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/Sao_Paulo

# ============================================
# Environment
# ============================================
ENV=production
GIN_MODE=release
